{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client", "node", "offscreencanvas"],
    "paths": {
      "@/*": ["src/*"],
      // "@topometa2d/*": ["../meta2d.js/packages/*"],
      // "@topometa2d-components/*": ["../meta2d-components/packages/*"],
    },
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/mock/data/testDate.json"]
}
